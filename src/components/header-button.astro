---
import ProfileIcon from "./profile-icon.astro";
---

<div
  class="bg-main-purple w-[11.75rem] h-10 rounded-lg text-white flex items-center mx-auto p-4 gap-2"
>
  <div class="shrink-0">
    <ProfileIcon />
  </div>

  <button class="text-sm overflow-hidden whitespace-nowrap"
    ><span class="font-bold profile-icon">Log in</span> or <span
      class="font-bold"
      >Sign in
    </span></button
  >
</div>
<style>
    .nav-shadow {
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.10);
    }
</style>