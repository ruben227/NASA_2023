---
import Layout from "../layouts/Layout.astro";

---

<Layout title="Login">
    <main class="h-screen grid place-content-center bg-bottom bg-cover bg-[url('../../public/img-hero.jpeg')]">
        <div class="max-w-4xl p-10 shadow-md rounded-xl bg-white ">
            <h2 class="mb-4">Log in</h2>
            <form action="" class=" flex flex-col gap-5 ">
                <input class="rounded-md p-2 focus:outline-none focus:border-main-purple border-2" type="text" name="username" id="username" placeholder="Username or email">
                <input class="rounded-md p-2 focus:outline-none focus:border-main-purple border-2" type="password" name="password" id="password" placeholder="Your password">
                <button type="submit" class="bg-main-purple w-full h-10 rounded-lg text-white flex items-center mx-auto p-4 gap-2 text-center flex justify-center">Login</button>
            </form>
            <div class="sep flex justify-center ">
                <span class="bg-white z-10 px-3 my-4 text-gray-500">OR</span>
            </div>
            <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />

<div class="google-btn w-full">
  <div class="google-icon-wrapper">
    <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
  </div>
  <p class="btn-text"><b>Sign in with google</b></p>
</div>
        </div>
    </main>
</Layout>
<style>
    .sep{
        position: relative;
    }
    .sep::before{
        content: "";
        position: absolute;
        width: 100%;
        height: 2px;
        background: grey;
        top: calc(50% - 1px);
    }


.google-btn {
  height: 42px;
  background-color: #4285f4;
  border-radius: 2px;
  box-shadow: 0 3px 4px 0 rgba(0,0,0,.25);
  .google-icon-wrapper {
    position: absolute;
    margin-top: 1px;
    margin-left: 1px;
    width: 40px;
    height: 40px;
    border-radius: 2px;
    background-color: #fff;
  }
  .google-icon {
    position: absolute;
    margin-top: 11px;
    margin-left: 11px;
    width: 18px;
    height: 18px;
  }
  .btn-text {
    float: right;
    margin: 11px 11px 0 0;
    color: #fff;
    font-size: 14px;
    letter-spacing: 0.2px;
    font-family: "Roboto", Arial, Helvetica, sans-serif;
  }
  &:hover {
    box-shadow: 0 0 6px #4285f4;
  }
  &:active {
    background: #1669F2;
  }
}

</style>