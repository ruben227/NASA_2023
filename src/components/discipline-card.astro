---
interface Props {
  name: string;
  icon: string;
}
const { name, icon } = Astro.props;
---

<div
  class="w-[17rem] h-[11.5rem] flex-shrink-0 card flex flex-col justify-center items-center gap-4"
>
  <img src={icon} alt={name} width="40" height="70" />
  <p>{name}</p>
</div>
<style>
  .card {
    border-radius: 8px;
    border: 1px solid #d6d6d6;
    background: #fff;
    box-shadow:
      0px 0px 20px 0px rgba(0, 0, 0, 0.05),
      0px 16px 30px 0px rgba(0, 0, 0, 0.05);
  }
</style>
