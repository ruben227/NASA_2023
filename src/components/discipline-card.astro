---
interface Props {
  name: string;
  icon: string;
}
const { name, icon } = Astro.props;
---

<div
  class="w-[17rem] h-[11.5rem] flex-shrink-0 card flex flex-col justify-center items-center gap-4 hover:border-main-purple"
>
  <img src={icon} alt={name} width="40" height="70" />
  <p>{name}</p>
</div>
<style>
  .card {
    border-radius: 8px;
    border: 1px solid #d6d6d6;
    background: #fff;
    box-shadow:
      0px 0px 20px 0px rgba(0, 0, 0, 0.05),
      0px 16px 30px 0px rgba(0, 0, 0, 0.05);
  }
  .card:hover{
    box-shadow:
      0px 0px 20px 0px rgba(192, 132, 252, 0.5),
      0px 16px 30px 0px rgba(192, 132, 252, 0.5);
      transition: transform .3s;
      transform: translateY(-3px);
      cursor: pointer;
      border: 1px solid rgb(192, 132, 252);
  }
</style>
