---
type Props = {
  id: number;
};
const { id } = Astro.props;
const response = await fetch(`https://techport.nasa.gov/api/projects/${id}`);
const project: any = await response.json();
---

<div
  class="w-[36.313rem] h-[10.875rem] bg-white projects-card rounded-[1.25rem] p-5 flex flex-col gap-2"
>
  <div class="flex">
    <h3
      class="font-bold text-[27px] text-ellipsis overflow-hidden whitespace-nowrap"
    >
      {project.project.title}
    </h3>
    <div class="text-main-purple">
      <span> #NASA</span><span> #PLANETS</span>
    </div>
  </div>
  <p>{project.project.principalInvestigators[0].fullName}</p>
  <div class="line-clamp-2" set:html={project.project.description} />
</div>
<style>
  .projects-card {
    box-shadow:
      0px 0px 20px 0px rgba(0, 0, 0, 0.05),
      0px 16px 30px 0px rgba(0, 0, 0, 0.05);
  }
</style>
